<!-- item_voucher.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:gravity="center_vertical">

    <RadioButton
        android:id="@+id/radioVoucher"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:buttonTint="@color/color_5E4C3E"
        android:focusable="false"
        android:clickable="false" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/bg_border_rounded"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtVoucherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher Name"
            android:textSize="16sp"
            android:textColor="@color/color_5E4C3E"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVoucherDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtVoucherMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max discount"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtVoucherExpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires: 30/6/2025"
            android:textColor="#B81414"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>
