<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <include layout="@layout/topbar_track_orders" />

    <!-- Thông tin đơn hàng -->
    <LinearLayout
        android:id="@+id/rootTrackOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: ..."
            android:textColor="#E24747"
            android:textSize="22sp" />

        <!-- Order Date with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_pending" />

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date: ..."
                android:textColor="#5E4C3E"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_in_transit" />

            <TextView
                android:id="@+id/tvEstimatedDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated delivery: ..."
                android:textColor="#5E4C3E"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- ─── Status Timeline ─────────────────────────── -->
    <LinearLayout
        android:id="@+id/llStatusTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Row 1: Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="11">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Picked up"
                android:textSize="14sp"
                android:textColor="#3F2305"/>

            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="In transit"
                android:textSize="14sp"
                android:textColor="#3F2305"/>

            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Out For Delivery"
                android:textSize="14sp"
                android:textColor="#3F2305"/>

            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Delivered"
                android:textSize="14sp"
                android:textColor="#3F2305"/>
        </LinearLayout>

        <!-- Row 2: Icons & Connectors -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:weightSum="11"
            android:gravity="center_vertical">

            <!-- Step 1 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="2"
                android:src="@drawable/ic_check_circle" />

            <!-- Connector 1 -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/color_3F2305"/>

            <!-- Step 2 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="2"
                android:src="@drawable/ic_check_circle" />

            <!-- Connector 2 -->

            <!-- Step 3 -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/color_3F2305"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="2"
                android:src="@drawable/ic_check_circle" />

            <!-- Connector 3 -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/color_3F2305"/>

            <!-- Step 4 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="2"
                android:src="@drawable/ic_check_circle" />
        </LinearLayout>


        <!-- Row 3: Dates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="11">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="22nd May"
                android:textSize="12sp"
                android:textColor="#3F2305"/>

            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="23rd May"
                android:textSize="12sp"
                android:textColor="#3F2305"/>

            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="23rd May"
                android:textSize="12sp"
                android:textColor="#3F2305"/>

            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="25th May"
                android:textSize="12sp"
                android:textColor="#3F2305"/>
        </LinearLayout>
    </LinearLayout>
    <!-- ──────────────────────────────────────────────── -->


    <!-- Timeline RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />
</LinearLayout>
