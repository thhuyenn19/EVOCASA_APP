<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Nút back -->
            <LinearLayout
                android:id="@+id/btnProfileDetailsBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/bg_rounded_button"
                android:orientation="vertical"
                android:clickable="true"

                android:focusable="true">

                <ImageView
                    android:id="@+id/imgProfileDetailsBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_rounded_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back" />
            </LinearLayout>

            <!-- Spacer để căn giữa title -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.25" />

            <!-- Tiêu đề tùy chỉnh -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/title_edit_address_title"
                android:textColor="@color/color_5E4C3E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Spacer phải -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.4" />
        </LinearLayout>

        <!-- Selected Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_box_border"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_selected_area"
                android:textStyle="bold"
                android:textColor="#5E4C3E"
                android:paddingBottom="8dp" />

            <!-- Timeline dots -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/dot_inactive"
                        android:layout_marginTop="4dp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="16dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/dot_inactive" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="16dp"
                        android:background="#CCCCCC" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/dot_active"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- Area names -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viet Nam" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ho Chi Minh City"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu Duc"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_ward_commune"
            android:textStyle="bold"
            android:textColor="#5E4C3E"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <!-- Section A -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:paddingBottom="8dp"
                    android:text="A"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="An Phu Ward"
                        android:textColor="#5E4C3E" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_line_total_cart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="An Thanh Ward"
                        android:textColor="#5E4C3E" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_line_total_cart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="An Tam Commune"
                        android:textColor="#5E4C3E" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_line_total_cart" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">

                <!-- Section L -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:paddingBottom="8dp"
                    android:text="L"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Linh Dong Ward"
                        android:textColor="#5E4C3E" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_line_total_cart" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Linh Trung Ward"
                            android:textColor="#5E4C3E"
                            android:textStyle="bold"/>

                        <!-- Spacer để căn giữa title -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.1" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="8dp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_line_total_cart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Linh Xuan Commune"
                        android:textColor="#5E4C3E" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_line_total_cart" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <!--BUTTON SAVE-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_pressed_effect"
            android:elevation="2dp"
            android:text="@string/title_save_edit_profile"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>
