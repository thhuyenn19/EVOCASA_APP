<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".helpcenter.PurchasePolicyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="24dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingTop="8dp">

            <!-- Nút back -->
            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_rounded_button"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imgWishlistBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back" />
            </LinearLayout>

            <!-- Tiêu đề căn giữa -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/zen_old_mincho_black"
                android:gravity="center"
                android:text="Purchase Policy"
                android:textColor="@color/color_5E4C3E"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Policy Title -->
        <TextView
            android:id="@+id/tv_policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EvoCasa Purchase Policy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F2305"
            android:paddingBottom="12dp"
            android:fontFamily="@font/zen_old_mincho"/>

        <!-- Section 1: Ordering -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Ordering Process"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F2305"
                    android:fontFamily="@font/inter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Browse our product catalog, choose your desired item, select color and size, then tap 'Add to Cart' or 'Buy Now'. After filling out accurate delivery information and selecting a payment method, your order will be confirmed via email or SMS."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2: Delivery -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Delivery and Shipping Fees"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F2305"
                    android:fontFamily="@font/inter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shipping fees vary depending on your location and order volume. Orders over 5,000,000 VND may qualify for free delivery in certain cities. Standard delivery is completed within 3–7 working days. Custom or pre-order items may take up to 15 days."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 3: Payment -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Payment Methods"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F2305"
                    android:fontFamily="@font/inter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We accept Cash on Delivery (COD), bank transfer, and popular e-wallets such as Momo, ZaloPay, and VNPay. For prepayments, please complete the payment before shipping. Payment confirmations will be sent via email."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
