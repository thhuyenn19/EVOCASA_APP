<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFCF3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp">

        <!-- Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProduct"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_furniture_tevechairs"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tag -->
        <TextView
            android:id="@+id/tvTagDiscountTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-34%"
            android:textColor="#E24747"
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_flash"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/bg_discount_top_tag"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/imgProduct"
            app:layout_constraintStart_toStartOf="@id/imgProduct" />

        <!-- Favorite -->
        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_favourite"
            app:layout_constraintTop_toTopOf="@id/imgProduct"
            app:layout_constraintEnd_toEndOf="@id/imgProduct"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Footed German Cupboard"
            android:textColor="@color/color_5E4C3E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lineSpacingExtra="0dp"
            app:layout_constraintTop_toBottomOf="@id/imgProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp" />



        <!-- Old Price -->
        <TextView
            android:id="@+id/tvOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$6450"
            android:textColor="#9C9999"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"
            app:layout_constraintBottom_toTopOf="@id/llBottomPriceRow"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Price + Discount + Rating -->
        <LinearLayout
            android:id="@+id/llBottomPriceRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp">

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$4257"
                android:textColor="#E24747"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Discount -->
            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-34%"
                android:textStyle="bold"
                android:textColor="#FF6600"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_discount_tag"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="10sp" />

            <!-- Rating -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star_yellow" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.9"
                    android:textColor="@color/color_5E4C3E"
                    android:textSize="10sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
