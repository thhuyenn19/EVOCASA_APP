<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".helpcenter.PrivacyPolicyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="24dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingTop="8dp">

            <!-- Nút back -->
            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_rounded_button"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imgPrivacyBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back" />
            </LinearLayout>

            <!-- Tiêu đề căn giữa -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/zen_old_mincho_black"
                android:gravity="center"
                android:text="Privacy Policy"
                android:textColor="@color/color_5E4C3E"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Policy Title -->
        <TextView
            android:id="@+id/tv_policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EvoCasa Privacy Policy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F2305"
            android:paddingBottom="12dp"
            android:fontFamily="@font/zen_old_mincho"/>

        <!-- Section 1: Data Collection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Personal Data Collection"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F2305"
                    android:fontFamily="@font/inter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We collect your name, contact info, and order details to fulfill your purchases and improve our services. Data is stored securely and only used for the stated purposes."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2: Data Usage -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Use of Information"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F2305"
                    android:fontFamily="@font/inter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We use your information for delivery, payment, and customer support. Your data is not sold to third parties without your consent."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 3: Your Rights -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Your Rights and Access"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3F2305"
                    android:fontFamily="@font/inter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have the right to request data access, correction, or deletion at any time by contacting our customer service team."
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/inter"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
