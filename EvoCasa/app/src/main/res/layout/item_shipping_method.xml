<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootShippingItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:paddingVertical="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_shipping_normal">

    <!-- Icon riêng cho từng method -->
    <ImageView
        android:id="@+id/imgShippingIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Shipping Icon" />

    <!-- Tên + mô tả -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtShippingMethodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Express Delivery"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtShippingMethodDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received on Thursday, May 15, 2025"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_5E4C3E"
            />
    </LinearLayout>

    <!-- Giá -->
    <TextView
        android:id="@+id/txtShippingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$50"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"/>
</LinearLayout>
