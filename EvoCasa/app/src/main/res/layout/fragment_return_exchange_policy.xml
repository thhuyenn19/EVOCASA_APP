<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollReturnPolicy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="15dp">

            <LinearLayout
                android:id="@+id/btnReturnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/bg_rounded_button"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imgReturnBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_rounded_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.4" />

            <TextView
                android:id="@+id/txtTitleReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Return and Exchange Policy"
                android:textColor="@color/color_5E4C3E"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/zen_old_mincho_black" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtReturnIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We understand that sometimes things don't work out. Please review our return and exchange policy carefully:"
                android:textSize="14sp"
                android:textColor="@color/color_5E4C3E"
                android:fontFamily="@font/inter_tight_italic"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="Return Conditions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3F2305"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="Items must be returned within 7 days of receipt, in original packaging, unused and undamaged. Custom orders are non-refundable."
                android:textSize="14sp"
                android:textColor="@color/color_5E4C3E"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="Exchange Policy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3F2305"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="We allow exchanges for items of equal or higher value. Please contact us in advance to arrange your exchange."
                android:textSize="14sp"
                android:textColor="@color/color_5E4C3E"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="Return Process"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3F2305"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="To initiate a return, please contact our customer service. You are responsible for return shipping costs unless the item was defective or incorrect."
                android:textSize="14sp"
                android:textColor="@color/color_5E4C3E"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="Customer Support"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3F2305"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="Reach out to our support team via hotline or email for further assistance with returns and exchanges."
                android:textSize="14sp"
                android:textColor="@color/color_5E4C3E"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="24dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
