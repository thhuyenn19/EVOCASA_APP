<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/onboarding_bg_3"
    android:orientation="vertical"
    tools:context=".onboarding.Onboarding3Fragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="284dp" />

    <TextView
        android:id="@+id/txtViewOnboarding3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zen_old_mincho_black"
        android:paddingStart="20dp"
        android:text="@string/title_onboarding3_line_1"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/txtView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:text="@string/title_onboarding3_description"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>