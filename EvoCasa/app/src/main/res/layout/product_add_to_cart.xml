<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBottomCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_bg"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="5dp">

    <!-- Customize section -->
    <TextView
        android:id="@+id/txtCustomize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/title_customize"
        android:textColor="@color/color_5E4C3E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutOptionsCustomize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">
        <ImageView
            android:id="@+id/imgAvatar1"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginEnd="12dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_logo_app" />
        <ImageView
            android:id="@+id/imgAvatar2"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginEnd="12dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_logo_app" />
        <ImageView
            android:id="@+id/imgAvatar3"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginEnd="12dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_logo_app" />
        <!-- Color option buttons added dynamically -->
    </LinearLayout>

    <!-- Gạch ngang phân cách -->
    <View
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray" />

    <!-- Quantity section -->
    <LinearLayout
        android:id="@+id/layoutQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/title_quantity"
            android:textStyle="bold"
            android:textColor="@color/color_5E4C3E"
            android:textSize="16sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDecrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:contentDescription="Decrease"
                android:src="@drawable/ic_minus_quantity" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/zen_old_mincho"
                android:text="1"
                android:textColor="@color/color_5E4C3E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnIncrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:contentDescription="Increase"
                android:src="@drawable/ic_plus_quantity" />
        </LinearLayout>
    </LinearLayout>
    <!-- Add to Cart Button -->
    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_add_to_cart"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/color_5E4C3E"
        android:backgroundTint="@color/color_bg_btn_addtocart" />
</LinearLayout>
