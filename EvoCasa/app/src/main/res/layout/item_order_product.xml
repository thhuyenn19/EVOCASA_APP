<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProduct"
        android:layout_width="80dp"
        android:layout_height="105dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_cart_product"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
        app:layout_constraintStart_toEndOf="@+id/checkboxSelect"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerSize="10dp"
        app:cornerFamily="rounded" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travertine Table Lamp"
            android:textStyle="bold"
            android:textColor="@color/color_5E4C3E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3,500"
            android:textColor="@color/color_5E4C3E"
            android:textSize="14sp" />
        <!-- Thêm khoảng trống để đẩy Quantity xuống -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 1"
            android:textColor="#5E4E4180"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
