<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/bgNotiMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:src="@drawable/ic_order_delivered" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/txtNotiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/zen_old_mincho"
            android:text="Order Delivered"
            android:textColor="#5E4C3E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="6dp"/>

        <TextView
            android:id="@+id/txtNotiMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter"
            android:text="Order 250421T3W123 is completed. Your feedback matters to others! Rate the products by 26-05-2025 and get up 200 coins."
            android:textColor="#CC000000"
            android:paddingVertical="5dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txtNotiTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter"
            android:text="Today 11:10"
            android:paddingTop="5dp"
            android:paddingBottom="6dp"
            android:textColor="#CC000000"
            android:textSize="10sp" />
    </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#5E4C3E"/>
</LinearLayout>