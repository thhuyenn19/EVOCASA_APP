<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF3">

    <!-- Top Bar -->
    <include
        layout="@layout/topbar_shop_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp" />

    <!-- Hero Section -->
    <RelativeLayout
        android:id="@+id/heroSection"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@layout/topbar_shop_all">

        <ImageView
            android:id="@+id/imgCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_category_shop"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtCategoryShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:text="All category"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/txtDescriptionShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heroSection"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Celebrating patina, heritage, and the comfort of the past."
        android:textColor="#8B7355"
        android:textSize="14sp" />

    <!-- RecyclerView với padding trái/phải 17dp -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtDescriptionShop"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false"
        android:background="#FFFCF3" />
</RelativeLayout>
