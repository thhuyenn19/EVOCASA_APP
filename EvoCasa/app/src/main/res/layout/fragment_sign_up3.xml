<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFCF3"
    android:padding="24dp"
    tools:context=".auth.SignUp3Fragment">

    <!-- Header với back button và help button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_arrow_back" />

        <ImageView
            android:id="@+id/btnHelp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_help" />

    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="-40dp"
        android:gravity="center"
        android:text="Verify your email"
        android:textAlignment="center"
        android:textColor="#5E4C3E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Step Indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <!-- Step 1 - Active -->
        <View
            android:id="@+id/step1"
            android:layout_width="28dp"
            android:layout_height="6dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/step_active"
            android:backgroundTint="#5E4C3E" />

        <!-- Step 2 - Inactive -->
        <View
            android:id="@+id/step2"
            android:layout_width="28dp"
            android:layout_height="6dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/step_active" />

        <!-- Step 3 - Inactive -->
        <View
            android:id="@+id/step3"
            android:layout_width="28dp"
            android:layout_height="6dp"
            android:background="@drawable/step_inactive" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="We just sent 5-digit code to your email,\nenter it bellow:"
        android:textAlignment="center"
        android:textColor="#5E4C3E"
        android:textSize="16sp"
        android:textStyle="italic" />

    <!-- Code Label -->
    <TextView
        android:id="@+id/txtCodeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Code"
        android:textColor="#5E4C3E"
        android:textSize="16sp" />

    <!-- Code Input Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtCode1"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/code_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#5E4C3E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCode2"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/code_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#5E4C3E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCode3"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/code_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#5E4C3E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCode4"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/code_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#5E4C3E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCode5"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:background="@drawable/code_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#5E4C3E"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Resend Code -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the code? "
            android:textColor="#5E4C3E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btnSendAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="Send again"
            android:textColor="#5E4C3E"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Verify Email Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerifyEmail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_pressed_effect"
        android:elevation="2dp"
        android:text="VERIFY EMAIL"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Spacer để đẩy terms xuống dưới -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Terms and Privacy Policy -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="By using EvoCasa, you agree to the"
            android:textColor="#5E4C3E"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="Terms"
            android:textColor="#5E4C3E"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and "
            android:textColor="#5E4C3E"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="Privacy Policy"
            android:textColor="#5E4C3E"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textColor="#5E4C3E"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>